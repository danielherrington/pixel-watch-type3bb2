<WatchFace width="450" height="450" clipShape="CIRCLE" 
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
           xsi:noNamespaceSchemaLocation="https://schemas.android.com/wear/watchface/watch_face_format_1_0.xsd">
    
    <!-- Global Black Background -->
    <PartDraw x="0" y="0" width="450" height="450">
        <Fill color="#000000" />
    </PartDraw>

    <!-- PLANETARY SYSTEM -->
    <Group x="0" y="0" width="450" height="450"
           rotation="([MINUTE] + [SECOND]/60) * 6">
        
        <!-- 1. The Main Disc Background (Minutes Track) -->
        <PartImage x="0" y="0" width="450" height="450">
            <Image resource="bg_main_minute_disc" />
        </PartImage>

        <!-- 2. SET OF ORBITAL SUB-DIALS -->
        
        <!-- SUB-DIAL 1: HOURS (Bottom Left) -->
        <Group x="105" y="245" width="160" height="160"
               rotation="-(([MINUTE] + [SECOND]/60) * 6)">
            <!-- Dial Background -->
            <PartImage x="0" y="0" width="160" height="160">
                <Image resource="bg_subdial_hours"/>
            </PartImage>
            <!-- Hour Hand -->
            <PartImage x="0" y="0" width="160" height="160"
                       pivotX="80" pivotY="80"
                       rotation="([HOUR_0_11] + [MINUTE]/60) * 30">
                <Image resource="hand_hour"/>
            </PartImage>
        </Group>

        <!-- SUB-DIAL 2: RUNNER (180s) (Top Center) -->
        <Group x="165" y="80" width="120" height="120"
               rotation="-(([MINUTE] + [SECOND]/60) * 6)">
            <!-- Dial Background -->
            <PartImage x="0" y="0" width="120" height="120">
                <Image resource="bg_subdial_runner"/>
            </PartImage>
            <!-- Runner Hand (360 deg in 180s) -->
            <PartImage x="0" y="0" width="120" height="120"
                       pivotX="60" pivotY="60"
                       rotation="([UTC_TIMESTAMP] % 180000) / 500">
                <Image resource="hand_runner"/>
            </PartImage>
        </Group>

        <!-- SUB-DIAL 3: DAY (Middle Right) -->
        <Group x="300" y="180" width="120" height="120"
               rotation="-(([MINUTE] + [SECOND]/60) * 6)">
            <!-- Dial Background -->
            <PartImage x="0" y="0" width="120" height="120">
                <Image resource="bg_subdial_day"/>
            </PartImage>
            <!-- Day Hand (1-7) -->
            <PartImage x="0" y="0" width="120" height="120"
                       pivotX="60" pivotY="60"
                       rotation="([DAY_OF_WEEK] - 1) * 51.4">
                <Image resource="hand_small"/>
            </PartImage>
        </Group>

        <!-- SUB-DIAL 4: TEMP / BATTERY (Bottom Right) -->
        <Group x="250" y="300" width="100" height="100"
               rotation="-(([MINUTE] + [SECOND]/60) * 6)">
            <!-- Dial Background -->
            <PartImage x="0" y="0" width="100" height="100">
                <Image resource="bg_subdial_temp"/>
            </PartImage>
            <!-- Gauge Hand (-45 to +45 range) -->
            <PartImage x="0" y="0" width="100" height="100"
                       pivotX="50" pivotY="50"
                       rotation="([BATTERY_LEVEL] * 0.9) - 45">
                <Image resource="hand_small"/>
            </PartImage>
        </Group>

    </Group>
</WatchFace>
